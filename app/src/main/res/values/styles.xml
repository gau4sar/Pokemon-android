    <style name="ExpandedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CollapsedAppBar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="toolbar" parent="Theme.Pokemon">
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="CustomToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- HERE ARE THE CHANGES - Change color of different texts -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorControlNormal">@color/color_green</item>
    </style>

    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="indicatorColor">@color/color_green</item>
    </style>

    <!-- Parent simple button style-->
    <style name="SimpleButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">0dp</item>
        <item name="rippleColor">@color/grey</item>
    </style>

    <style name="RedButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/color_red</item>
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="RedButtonStyleForBottom" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/color_red</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:layout_marginBottom">-6dp</item>
        <item name="android:padding">@dimen/margin_16</item>
    </style>

    <style name="GreyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/grey</item>
        <item name="rippleColor">@color/white</item>
    </style>


    <!-- Text Button Design styles Parent -->
    <style name="TextStyleButton" parent="SimpleButtonStyle">
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:padding">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>


    <!-- Text Button Design styles red ripple-->
    <style name="TextStyleButtonTealRipple" parent="TextStyleButton">
        <item name="rippleColor">@color/color_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextStyle14" parent="TextStyle15">
        <item name="android:background">@color/transparent</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="TextStyle14Black" parent="TextStyle14">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle14Grey" parent="TextStyle15">
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="TextStyle12" parent="TextStyle15">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="TextStyle16White" parent="TextStyle15">
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="TextStyle16Black" parent="TextStyle15">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextStyle10" parent="TextStyle15">
        <item name="android:textSize">@dimen/text_size_10</item>
    </style>

    <style name="TextStyle24WhiteBold" parent="TextStyle15">
        <item name="android:textSize">@dimen/text_size_24</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="MyEditTextstyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/border_edit_text</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="Heading1" parent="Heading2">
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="Heading1Black" parent="Heading2">
        <item name="android:textSize">@dimen/text_size_20</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Heading2" parent="MediumTextStyle">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Heading2Black" parent="Heading2">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Heading3" parent="Heading1">
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <style name="Heading3Black" parent="Heading3">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Heading4" parent="Heading1">
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="Heading5" parent="Heading1">
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MediumTextStyle" parent="TextStyle15">
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

    <!-- Text Design styles -->
    <style name="TextStyle15" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_15</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Text Design styles -->
    <style name="TextStyle16" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Text Design styles -->
    <style name="TextStyle16White2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Text Design styles -->
    <style name="TextStyle16WhiteBold" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>